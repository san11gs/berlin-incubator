<?xml version="1.0"?>
<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">

<faces-config>
	<application>
		<!-- Enables Facelets -->
		<view-handler>com.sun.facelets.FaceletViewHandler</view-handler>  

		<locale-config>
			<default-locale>de-de</default-locale>
			<supported-locale>de-de</supported-locale>
		</locale-config>
		<message-bundle>messages</message-bundle>

	</application>
	
	<validator>
		<validator-id>phoneNumberValidator</validator-id>
		<validator-class>incubator.spring_faces.ui.validator.PhoneNumberValidator</validator-class>
	</validator>
	
</faces-config>